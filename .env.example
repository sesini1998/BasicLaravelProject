# Application Settings
APP_NAME=Laravel                    # Name of the application
APP_ENV=local                       # Environment (e.g., local, production)
APP_KEY=                            # Application encryption key (should be filled)
APP_DEBUG=true                      # Debug mode (true for local development, false for production)
APP_URL=http://localhost            # Application URL

# Logging Configuration
LOG_CHANNEL=stack                   # Logging channel configuration

# Database Configuration
DB_CONNECTION=mysql                # Database connection (e.g., mysql, sqlite)
DB_HOST=127.0.0.1                  # Database host
DB_PORT=3306                       # Database port
DB_DATABASE=laravel                # Database name
DB_USERNAME=root                   # Database username
DB_PASSWORD=                       # Database password

# Caching Configuration
CACHE_DRIVER=file                  # Cache driver (e.g., file, redis)
QUEUE_CONNECTION=sync              # Queue connection (e.g., sync, redis)
SESSION_DRIVER=file                # Session driver (e.g., file, database)
SESSION_LIFETIME=120               # Session lifetime (in minutes)

# Redis Configuration
REDIS_HOST=127.0.0.1               # Redis host
REDIS_PASSWORD=null                # Redis password (null if no password)
REDIS_PORT=6379                    # Redis port

# Mail Configuration
MAIL_MAILER=smtp                   # Mailer driver (e.g., smtp, sendmail)
MAIL_HOST=smtp.mailtrap.io         # Mail host server
MAIL_PORT=2525                     # Mail port
MAIL_USERNAME=null                 # Mail username
MAIL_PASSWORD=null                 # Mail password
MAIL_ENCRYPTION=null               # Mail encryption method
MAIL_FROM_ADDRESS=null             # Sender's email address
MAIL_FROM_NAME="${APP_NAME}"       # Sender's name (uses the application name)

# AWS Configuration (Amazon Web Services)
AWS_ACCESS_KEY_ID=                 # AWS access key ID
AWS_SECRET_ACCESS_KEY=             # AWS secret access key
AWS_DEFAULT_REGION=us-east-1       # AWS default region
AWS_BUCKET=                        # AWS bucket name

# Pusher Configuration (Real-time websockets)
PUSHER_APP_ID=                     # Pusher application ID
PUSHER_APP_KEY=                    # Pusher application key
PUSHER_APP_SECRET=                 # Pusher application secret
PUSHER_APP_CLUSTER=mt1             # Pusher application cluster

# Mix Configuration (Versioning for assets)
MIX_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
MIX_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"
